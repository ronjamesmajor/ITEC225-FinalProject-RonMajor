            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <Label Content="Contact Email" HorizontalAlignment="Left" Margin="25,274,0,0" VerticalAlignment="Top" Foreground="#FFF8F2F5"/>
        <TextBox HorizontalAlignment="Left" Margin="320,304,0,0" TextWrapping="Wrap" Text="..." VerticalAlignment="Top" Width="160" Height="20" Background="#FFF8F2F5" BorderBrush="{x:Null}" Foreground="#FF41352E">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <Label Content="Contact Address" HorizontalAlignment="Left" Margin="320,274,0,0" VerticalAlignment="Top" Foreground="#FFF8F2F5"/>
